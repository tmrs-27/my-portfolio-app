<div class="min-h-screen transition-colors duration-500 bg-white dark:bg-gray-900">
  <div class="container mx-auto py-10 px-4">
    <div class="mb-8">
      <%= link_to "← カテゴリ一覧に戻る", categories_path, class: "text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 font-medium" %>
    </div>

    <h1 class="text-4xl font-extrabold text-gray-700 dark:text-gray-300 mb-8">
      <span class="inline-block px-4 py-2 rounded-lg <%= @category.badge_classes %>">
        <%= @category.name %>
      </span>
      <span class="text-xl font-normal text-gray-500 dark:text-gray-400 ml-2">の投稿 (<%= @posts.count %>件)</span>
    </h1>

    <div id="posts" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @posts.each do |post| %>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-lg transition duration-200">
          <div class="text-gray-600">
            <%= render "posts/post", post: post %>
          </div>
          <div class="mt-4 pt-4 border-t border-gray-50 dark:border-gray-700">
            <%= link_to "詳細を見る", post, class: "text-blue-500 dark:text-blue-400 hover:underline font-medium" %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @posts.empty? %>
      <div class="bg-white dark:bg-gray-800 p-12 rounded-xl text-center text-gray-500 dark:text-gray-400">
        このカテゴリにはまだ投稿がありません。
      </div>
    <% end %>
  </div>
</div>
