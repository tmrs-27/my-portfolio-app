<div id="<%= dom_id post %>">
  <% if post.categories.any? %>
    <div class="mb-4 flex flex-wrap gap-2">
      <% post.categories.first(3).each do |category| %>
        <%= link_to category.name, category, class: "inline-block px-3 py-0.5 rounded-full text-xs font-medium #{category.badge_classes} transition-all duration-200 hover:scale-105 hover:shadow-md" %>
      <% end %>
    </div>
  <% end %>

  <h2 class="text-xl font-bold leading-snug text-gray-900 dark:text-white">
    <%= post.title %>
  </h2>
  <p class="mt-3 text-sm leading-relaxed text-gray-600 dark:text-gray-300 line-clamp-4">
    <%= truncate(post.body, length: 170) %>
  </p>
  <p
    class="mt-4 text-xs text-gray-400 dark:text-gray-500"
    data-controller="timeago"
    data-timeago-datetime-value="<%= post.created_at.iso8601 %>"
  >
    <%= time_ago_in_words(post.created_at) %>Ââç
  </p>
</div>
