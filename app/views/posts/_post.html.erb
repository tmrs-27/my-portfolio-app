<div id="<%= dom_id post %>">
  <% if post.categories.any? %>
    <div class="mb-3 flex flex-wrap gap-2">
      <% post.categories.each do |category| %>
        <%= link_to category.name, category, class: "inline-block px-3 py-0.5 rounded-full text-xs font-medium #{category.badge_classes} transition-all duration-200 hover:scale-105 hover:shadow-md" %>
      <% end %>
    </div>
  <% end %>
  <div class="mb-4">
    <strong class="text-gray-500 dark:text-gray-400 text-sm font-medium">タイトル</strong>
    <p class="text-gray-900 dark:text-white text-lg font-semibold mt-1"><%= post.title %></p>
  </div>

  <div>
    <strong class="text-gray-500 dark:text-gray-400 text-sm font-medium">本文</strong>
    <p class="text-gray-700 dark:text-gray-300 mt-1 whitespace-pre-wrap"><%= post.body %></p>
  </div>
</div>
